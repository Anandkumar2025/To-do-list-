<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication1"
        tools:targetApi="31">

        <activity
            android:name="com.example.myapplication1.TaskAdapter"
            android:exported="false"
            android:label="@string/title_activity_task_adapter"
            android:theme="@style/Theme.ToDoList" />
        <activity
            android:name="com.example.myapplication1.Task"
            android:exported="false" />

        <activity
            android:name="com.example.myapplication1.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.myapplication1.MainActivity"
            android:exported="true"
            android:theme="@style/Base.Theme.MyApplication1">
        </activity>
    </application>

</manifest>